{
    "name": "Bye Gmail",
    "version": "1.1.0",
    "description": "Break bad email habits by redirecting Gmail to HEY.",
    "homepage_url": "https://miguelpiedrafita.com",
    "author": "Miguel Piedrafita",
    "manifest_version": 2,
    "permissions": [
        "https://mail.google.com/*"
    ],
    "content_scripts": [{
        "matches": ["https://mail.google.com/*"],
        "run_at": "document_start",
        "js": ["index.js"]
    }],
    "icons": {
        "128": "assets/logo.png"
    }
}